package xadrez.peca;

public class Rei extends Peca {
	
	final String nome = "K";
	
	public Rei(int x, int y) {
		super(x, y);
	}
	
	public boolean mover(int nX, int nY) {
		if(Math.abs(nX - x) <= 1 && Math.abs(nY - y) <= 1) {
			setX(x);
			setY(y);
			obstruido(true);
			return true;
		}
		else {
			
		}
	}
	
	public boolean obstruido(boolean sn) {
		
	}
	
	public String getNome() {
		return nome;
	}
}
