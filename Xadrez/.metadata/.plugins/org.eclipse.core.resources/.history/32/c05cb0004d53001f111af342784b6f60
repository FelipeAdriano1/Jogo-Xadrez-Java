package xadrez.jogador;

import xadrez.peca.*;
import xadrez.tabuleiro.*;

public class Jogador extends Tabuleiro{
	
	public Jogador() {
		Peca r = new Torre(0, 0);
		Peca h = new Cavalo(0, 1);
		Peca b = new Bispo(0, 2);
		Peca k = new Rei(0, 3);
		Peca q = new Rainha(0, 4);
		Peca b2 = new Bispo(0, 5);
		Peca h2 = new Cavalo(0, 6);
		Peca r2 = new Torre(0, 7);
		
		tabuleiro[0][0] = r;
		tabuleiro[0][1] = h;
		tabuleiro[0][2] = b;
		tabuleiro[0][3] = k;
		tabuleiro[0][4] = q;
		tabuleiro[0][5] = b2;
		tabuleiro[0][6] = h2;
		tabuleiro[0][7] = r2;
	}
}
